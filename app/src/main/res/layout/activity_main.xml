<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9ECEF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="217dp"
            android:layout_height="48dp"
            android:layout_marginLeft="21dp"
            android:layout_gravity="center"
            android:background="@drawable/search"
            android:drawableStart="@drawable/lookss"
            android:hint="Search"
            android:paddingLeft="10dp"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/basket"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/burgur"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Categories"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="141dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="107dp"
                android:layout_height="141dp"
                android:background="@color/black"
                android:layout_marginLeft="23dp"
                android:backgroundTint="#CACBCF"
                app:cardCornerRadius="5dp">


                <ImageView
                    android:layout_width="107dp"
                    android:layout_height="96dp"
                    android:src="@drawable/shoes_ja" />
                
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sircle_line"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="34dp" />
                
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="78dp"
                    android:layout_marginLeft="34dp"
                    android:src="@drawable/logo_ja"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="120dp"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="Ja Morant "
                    android:textColor="#000000"
                    android:textSize="8dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="107dp"
                android:layout_height="141dp"
                android:background="@color/black"
                android:layout_marginLeft="23dp"
                android:backgroundTint="#CACBCF"
                app:cardCornerRadius="5dp">


                <ImageView
                    android:layout_width="107dp"
                    android:layout_height="96dp"
                    android:src="@drawable/shoes_ja" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sircle_line"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="34dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="78dp"
                    android:layout_marginLeft="34dp"
                    android:src="@drawable/logo_ja"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="120dp"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="Ja Morant "
                    android:textColor="#000000"
                    android:textSize="8dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="107dp"
                android:layout_height="141dp"
                android:background="@color/black"
                android:layout_marginLeft="23dp"
                android:backgroundTint="#CACBCF"
                app:cardCornerRadius="5dp">


                <ImageView
                    android:layout_width="107dp"
                    android:layout_height="96dp"
                    android:src="@drawable/shoes_ja" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sircle_line"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="34dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="78dp"
                    android:layout_marginLeft="34dp"
                    android:src="@drawable/logo_ja"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="120dp"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="Ja Morant "
                    android:textColor="#000000"
                    android:textSize="8dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
